#!/usr/bin/env python3
"""
Date/time for status bars (dwm/slstatus etc.).
"""

import os
from datetime import datetime

DATE_ICON = "ï€— "  # Clock icon (Nerd Font:  )


def main() -> None:
    blue = os.environ.get("BLUE_COLOR", "")
    date_color = os.environ.get("RED_COLOR", "")
    time_color = os.environ.get("GREEN_COLOR", "")

    now = datetime.now()
    # Single strftime then split for the two color spans
    formatted = now.strftime("%a %d %b, %I:%M:%S")
    date_str, time_str = formatted.rsplit(", ", 1)
    date_str += ", "

    print(
        f"^c{blue}^ {DATE_ICON} ^c{date_color}^{date_str}^c{time_color}^{time_str}",
        end="",
    )


if __name__ == "__main__":
    main()
